<script>
    $(document).ready(function () {
        $("#exportoexcel").css("display", "none");
        //enable chart view or not based on radio button chagne
        $("input[name=L1selectView]:radio").change(function () {
            if ($('input[name=L1selectView]:checked').val() === "L1selectGraph") {

                $("#exportoexcel").css("display", "none");
                $("#exporttopdf").css("display", "block");
                showlevelGraph();
            } else if ($('input[name=L1selectView]:checked').val() === "L1selectData") {
                $("#exportoexcel").css("display", "block");
                $("#exporttopdf").css("display", "none");
                showlevelData();
            }
            else {
                $("#exportoexcel").css("display", "block");
                $("#exporttopdf").css("display", "none");
                showlevelDetails();
            }
        })

        $("#previousLevelButton").click(function () {
            DisplayLevel();
            $('input:radio[id*="radioL1Graph"]').prop('checked', true);

        });
        $("#exporttopdf").click(function () {
            //blockElement("divL1tag");
            ERPDFExportByLevel();
        });
        $("#exportoexcel").click(function () {
            //blockElement("divL1tag");
            ERExcelExportByLevel();

        });

    });

    $(window).resize(function () {
        switch (LevelIdentifier) {
            case 1:
                if ($("#divlevelchart").data("kendoChart") != null)
                    $("#divlevelchart").data("kendoChart").refresh();
                break;
            case 2:
                if (groupbyChapter) {
                    if ($("#divlevel2chart").data("kendoChart") != null) {
                        $("#divlevel2chart").data("kendoChart").refresh();
                    }
                }
                else {
                    if ($("#divlevel3chart").data("kendoChart") != null) {
                        $("#divlevel3chart").data("kendoChart").refresh();
                    }
                }
                break;
            case 3:
                if ($("#divlevel3chart").data("kendoChart") != null) {
                    $("#divlevel3chart").data("kendoChart").refresh();
                }
                break;
            case 4:
                if ($("#divlevel4chart").data("kendoChart") != null) {
                    $("#divlevel4chart").data("kendoChart").refresh();
                }
                break;
            case 5:
                if ($("#divlevel5chart").data("kendoChart") != null) {
                    $("#divlevel5chart").data("kendoChart").refresh();
                }
                break;
        }

    });
</script>



