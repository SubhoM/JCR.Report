@model IEnumerable<JCR.Reports.DataModel.Chapter>
    <div id="multisitechapter">
       <h6><b>Chapter</b></h6>
        <div class="margintop">
            @{ 
                string selectedValue = Model.ToList().Count == 0 ? "" : Model.First().ChapterID.ToString();
            }
            @(Html.Kendo().MultiSelect()
          .Name("MultiSiteChapter")
                          .DataTextField("ChapterText")
                          .DataValueField("ChapterID")
          .Placeholder("Select Chapter")
          .Filter(FilterType.Contains)
          .HighlightFirst(true)
          .BindTo(Model)
        .AutoClose(false)
                   .Events(e =>
                   {
                       e.Change("onMSChapterChange").Select("onMSChapterSelect");
                   })
            .Value(@selectedValue)   
            )
        </div>
     </div>

<script>
    $(document).ready(function () {       
        addarrowtomultiselect("MultiSiteChapter");
 
    });
 
  
   
  
</script>


















